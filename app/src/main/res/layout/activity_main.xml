<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="clau.a391.MainActivity"
    android:orientation="vertical"
    android:layout_margin="30dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INF-391"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#010254"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Numeros Pseudoaleatorios"
               android:textSize="25dp"
               android:textStyle="bold"
               android:textColor="#010254"
              />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="50dp">
            <Button
                android:id="@+id/BtnCuadradosMedios"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Cuadrados Medios"
                android:background="@drawable/forma"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/BtnCongruencialMixto"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Congruencial Mixto"
                android:background="@drawable/forma"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/BtnCongruencialMultiplicativo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Congruencial Multiplicativo"
                android:background="@drawable/forma"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <Button
                android:id="@+id/BtnCongruencialBinario"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Congruencial Binario"
                android:background="@drawable/forma"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

</LinearLayout>
